/**
 * Computes the sum of two bits.
 只有当a,b一个为一 一个为零时 sum才为一
 只有当a,b都为一时 carry才为一
 */

CHIP HalfAdder {
    IN a, b;    // 1-bit inputs
    OUT sum,    // Right bit of a + b 
        carry;  // Left bit of a + b

    PARTS:
    Xor(a = a, b = b, out = sum);
    And(a = a, b = b, out = carry);
}
